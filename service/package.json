{
  "name": "signal-service",
  "module": "index.ts",
  "type": "commonjs",
  "private": true,
  "scripts": {
    "start": "bun run server:start",
    "dev": "bun --watch ./src/server.ts",
    "server:build": "ncc build ./src/server.ts -o ./dist --source-map && bun run sentry:sourcemaps",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org metorial --project mte-signal ./dist && sentry-cli sourcemaps upload --org metorial --project mte-signal ./dist",
    "server:start": "bun ./dist/index.js",
    "infra:up": "docker compose -p signal -f ./docker-compose.dev.yml --profile infra up -d --pull always",
    "infra:down": "docker compose -p signal -f ./docker-compose.dev.yml --profile infra down",
    "infra:logs": "docker compose -p signal -f ./docker-compose.dev.yml --profile infra logs -f",
    "db:generate": "bun prisma generate",
    "db:push:dev": "sh -c 'set -a; . .env; set +a; bun prisma db push --accept-data-loss'",
    "db:push:test": "sh -c 'set -a; . .env.test; set +a; bun prisma db push --accept-data-loss'",
    "db:push": "bun run db:push:dev && bun run db:push:test",
    "test": "bunx vitest run --passWithNoTests",
    "test:watch": "bunx vitest watch",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@lowerdeck/testing-tools": "^1.0.1",
    "@types/bun": "latest",
    "@types/node": "^25.0.3",
    "@vercel/ncc": "^0.38.1",
    "vitest": "4.0.17"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@aws-sdk/client-cloudwatch-logs": "^3.957.0",
    "@aws-sdk/client-iam": "^3.957.0",
    "@aws-sdk/client-lambda": "^3.958.0",
    "@lowerdeck/api-mux": "^1.0.2",
    "@lowerdeck/cache": "^1.0.1",
    "@lowerdeck/canonicalize": "^1.0.4",
    "@lowerdeck/cron": "^1.0.7",
    "@lowerdeck/encryption": "^1.0.7",
    "@lowerdeck/env": "^1.0.4",
    "@lowerdeck/error": "^1.0.10",
    "@lowerdeck/hash": "^1.0.4",
    "@lowerdeck/id": "^1.0.6",
    "@lowerdeck/once": "^1.0.4",
    "@lowerdeck/pagination": "^1.0.5",
    "@lowerdeck/queue": "^1.0.7",
    "@lowerdeck/rpc-client": "^1.0.6",
    "@lowerdeck/rpc-server": "^1.0.7",
    "@lowerdeck/sentry": "^1.0.2",
    "@lowerdeck/service": "^1.0.3",
    "@lowerdeck/slugify": "^1.0.5",
    "@lowerdeck/snowflake": "^1.0.2",
    "@lowerdeck/validation": "^1.0.4",
    "@metorial-services/forge-client": "^1.0.3",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@sentry/bun": "^10.38.0",
    "@sentry/cli": "^3.2.0",
    "axios": "^1.13.2",
    "date-fns": "^4.1.0",
    "ipaddr.js": "^2.3.0",
    "jszip": "^3.10.1",
    "object-storage-client": "^0.2.5",
    "prisma": "^7.2.0",
    "prisma-json-types-generator": "^4.0.1",
    "yaml": "^2.8.2"
  }
}
